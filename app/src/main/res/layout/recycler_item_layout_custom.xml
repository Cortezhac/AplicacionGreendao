<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:divider="@android:drawable/divider_horizontal_textfield"
    android:orientation="vertical"
    android:showDividers="end">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/png_clipart_pc_master_race_computer_cases_housings_personal_computer_game_maize_miscellaneous_game" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/recyclerDescripcion"
                android:layout_width="394dp"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_baseline_description_24"
                android:drawablePadding="5dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="@string/Null"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/recyclerPrecio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_baseline_attach_money_24"
                android:drawablePadding="5dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="@string/Null"
                android:textSize="18sp" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
